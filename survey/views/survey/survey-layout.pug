    //- modal final question
  #finalQuestion.modal.fade(tabindex='-1' role='dialog' aria-labelledby='finalQuestion' aria-hidden='true')
    .modal-dialog.modal-dialog-centered(role='document')
      .modal-content
        .modal-header
          h6#finalQuestionTitle.modal-title Are you satisfied with the system generated answer (i.e., the installation decision)? Please select the following options
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          form#final-question
            button(type="submit" style="display='none';")
            .anwsers.mt-2
              label.container-radio
                | Yes
                input(type='radio' class="final-question" name="satisfaction" value="1" required)
                span.checkmark

              label.container-radio
                | No
                input(type='radio' class="final-question" name="satisfaction" value="0" )
                span.checkmark

              label.container-radio
                | Maybe
                input(type='radio' class="final-question" name="satisfaction" value="2")
                span.checkmark
            .anwsers.mt-2
              div.font-weight-bold Can you explain about your option?
              
              textarea(style="width:100%", name="final-comment", cols="30", rows="5" required)


        .modal-footer
          button#final-question-button.btn.btn-primary(type='button') Continue



  #descriptionQuestion.modal.fade(tabindex='-1' role='dialog' aria-labelledby='descriptionQuestion' aria-hidden='false')
      .modal-dialog.modal-dialog-centered(role='document')
        .modal-content
          .modal-header
            h6#descriptionQuestionTitle.modal-title Description
            button.close(type='button' data-dismiss='modal' aria-label='Close')
              span(aria-hidden='true') &times;
          .modal-body
            
          .modal-footer
            button#final-question-button.btn.btn-secondary(type='button' data-dismiss='modal') Close